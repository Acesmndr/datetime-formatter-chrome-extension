{
	"manifest_version": 2,
	"name": "DateTime Formatter",
	"version": "EXTENSION_VERSION",
	"description": "",
  "permissions": [
		"<all_urls>",
    "tabs",
    "storage",
    "https://stackpath.bootstrapcdn.com/*"
  ],
  "browser_action": {
    "default_title": "DateTime Formatter"
  },
  "options_page": "options.html",
  "content_scripts": [{
        "run_at": "document_end",
        "js": ["assets/contentscript.js"],
        "all_frames" : true,
        "match_about_blank": true,
        "matches": ["http://*/*", "https://*/*"]
   }],
	"background":  {
    "scripts": ["assets/background.js"]
  },
  "update_url": "https://define-it-later.xml"
}
